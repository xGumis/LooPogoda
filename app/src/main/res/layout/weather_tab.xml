<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" android:clickable="true"
                                   android:focusable="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:padding="10dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tab_time" android:textAlignment="center"
                android:textSize="14sp" android:textStyle="bold" android:text="12:00"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tab_date" android:textAlignment="center"
                android:text="03.01.19" android:textSize="12sp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/i10d" android:id="@+id/tab_image"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tab_temp" android:textAlignment="center"
                android:textStyle="bold" android:textSize="14sp" android:text="20Â°C"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>